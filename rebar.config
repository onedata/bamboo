%% behaviours should be compiled before other files
{erl_first_files, [
    "src/onepanel_modules/installer/installer_behaviour.erl"
]}.

%% directory for releases
{sub_dirs, ["rel"]}.

%% deps options
{deps, [
    {ctool, ".*", {git, "ssh://git@git.plgrid.pl:7999/vfs/ctool.git", {tag, "6501da4"}}},
    {mochiweb, ".*", {git, "https://github.com/mochi/mochiweb.git", {tag, "b37b6fe"}}}
]}.

%% Add the tuple below to erl_opts proplist to completely turn off debug messages
%% {d, skip_debug}
{erl_opts, [
    fail_on_warning,
    debug_info
]}.

% Options for erlyDTL (templates for GUI)
{erlydtl_opts, [
    {doc_root, "src/gui_static/templates"},
    {out_dir, "ebin"},
    {source_ext, ".html"},
    {module_ext, "_view"}
]}.